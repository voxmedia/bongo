<h1>Projects</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= link_to 'Details', project_details_path(project), class: "btn btn-default" %>
        <%= link_to 'Edit', edit_project_path(project), class: "btn btn-default" %>
        <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "New project", new_project_path, class: "btn btn-primary" %></p>